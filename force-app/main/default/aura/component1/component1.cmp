<aura:component>
    <aura:attribute name="firstName" type="String" />
    <aura:attribute name="lastName" type="String" />

    <div class="slds-form slds-form_stacked">
        <div class="slds-form-element">
            <label class="slds-form-element__label" for="firstName">First Name</label>
            <div class="slds-form-element__control">
                <input type="text" id="firstName" aura:id="firstName" class="slds-input"  />
            </div>
        </div>
        <div class="slds-form-element">
            <label class="slds-form-element__label" for="lastName">Last Name</label>
            <div class="slds-form-element__control">
                <input type="text" id="lastName" aura:id="lastName" class="slds-input"  />
            </div>
        </div>
        <div class="slds-form-element">
            <button class="slds-button slds-button_brand" >Save</button>
        </div>
    </div>
</aura:component>